{
	"manifest_version": 2,
	"name": "twitch-auto-coin",
	"description": "Extension to automatically collect twitch channel coin",
	"version": "1.0",
	"permissions": [
		"http://*/*",
		"https://*/*",
        "storage",
		"activeTab"
	],
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup/index.html"
	},
	"icons": {
		"128": "img/icon.png"
	},
  "background": {
    "service_worker": "background.js"
  }
}